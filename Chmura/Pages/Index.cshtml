    @page "/Index"
@model IndexModel
@{
    ViewData["Title"] = "Mój Dysk";
    // Obliczenia
    var percent = Math.Min(100, Math.Round(Model.UsedMegabytes / 200 * 100, 1));
    // Kolory paska zależnie od zużycia
    string progressColor = percent > 90 ? "bg-danger" : (percent > 70 ? "bg-warning" : "bg-success");
}

<div class="container py-4">
    
    <div class="dashboard-card mb-4 p-4">
        <div class="row align-items-center">
            <div class="col-md-3">
                <h5 class="fw-bold mb-0 text-dark">
                    <i class="bi bi-hdd-network me-2"></i>Twój Dysk
                </h5>
            </div>
            <div class="col-md-6 my-3 my-md-0">
                <div class="progress" style="height: 20px; background-color: #e9ecef; border-radius: 10px;">
                    <div class="progress-bar @progressColor" role="progressbar" 
                         style="width: @percent%; border-radius: 10px;"
                         aria-valuenow="@percent" aria-valuemin="0" aria-valuemax="100">
                    </div>
                </div>
            </div>
            <div class="col-md-3 text-md-end">
                <span class="fw-bold fs-5">@percent%</span>
                <div class="text-muted small">Wykorzystano @Model.UsedMegabytes MB z 200 MB</div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        
        <div class="col-lg-4">
            <div class="dashboard-card h-100">
                <h5 class="fw-bold mb-3">Dodaj pliki</h5>
                <form method="post" enctype="multipart/form-data">
                    <div class="upload-area p-4 text-center mb-3">
                        <i class="bi bi-cloud-arrow-up fs-1 text-primary mb-2"></i>
                        <p class="fw-bold mb-1">Przeciągnij lub kliknij</p>
                        <span class="text-muted small d-block">Max 30 MB</span>
                        <input type="file" id="fileUpload" asp-for="UploadedFiles" multiple class="upload-input" />
                    </div>

                    <div class="form-check mt-2 text-start mb-3">
                        <input class="form-check-input" type="checkbox" asp-for="UnpackZips" id="unpackZips" />
                        <label class="form-check-label" for="unpackZips">Rozpakuj archiwa (.zip) po przesłaniu</label>
                    </div>

                    <!-- Podgląd zawartości ZIP (wczytywane asynchronicznie, bez nowego formularza) -->
                    <div id="zipPreview" class="mb-3"></div>

                    <button type="submit" class="btn btn-primary w-100 py-2 shadow-sm">
                        <i class="bi bi-send me-2"></i>Wyślij
                    </button>
                </form>
                
                @if (Model.UploadResult != null)
                {
                    <div class="alert alert-light border mt-3 small">
                        <i class="bi bi-info-circle me-1"></i> @Model.UploadResult
                    </div>
                }
                
                <div class="mt-4 text-center">
                     <a asp-page="/Logout" class="text-danger text-decoration-none small fw-bold">
                        <i class="bi bi-box-arrow-left me-1"></i>Wyloguj się
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="dashboard-card h-100">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="fw-bold mb-0">Twoje pliki</h5>
                    <span class="badge bg-light text-dark border">Ilość: @(Model.FileNames?.Count ?? 0)</span>
                </div>

                @if (Model.FileNames?.Any() == true)
                {
                    <div class="d-flex flex-column gap-2">
                        @foreach (var file in Model.FileNames)
                            {
                                // Ikony
                            string iconClass = "bg-light text-secondary";
                            string iconName = "bi-file-earmark";
                            
                            if (file.EndsWith(".jpg") || file.EndsWith(".png")) { iconClass = "bg-primary-subtle text-primary"; iconName = "bi-file-image"; }
                            else if (file.EndsWith(".pdf")) { iconClass = "bg-danger-subtle text-danger"; iconName = "bi-file-pdf"; }
                            else if (file.EndsWith(".zip")) { iconClass = "bg-warning-subtle text-warning"; iconName = "bi-file-zip"; }
                            else if (file.EndsWith(".txt")) { iconClass = "bg-info-subtle text-info"; iconName = "bi-file-text"; }

                            <div class="file-item rounded-3 border-0 bg-white shadow-sm p-3 mb-2">
                                <div class="d-flex align-items-center w-100">
                                    <div class="rounded-3 p-2 me-3 @iconClass d-flex align-items-center justify-content-center" style="width: 45px; height: 45px;">
                                        <i class="bi @iconName fs-4"></i>
                                    </div>
                                    
                                    <div class="flex-grow-1 overflow-hidden">
                                        <div class="fw-bold text-truncate">@file</div>
                                    </div>

                                    <div class="d-flex gap-2 ms-3">
                                        <a asp-page-handler="Download" asp-route-fileName="@file" class="btn btn-light btn-sm text-primary border" title="Pobierz">
                                            <i class="bi bi-download"></i>
                                        </a>
                                        <form method="post" asp-page-handler="Delete" class="m-0">
                                            <input type="hidden" name="fileName" value="@file" />
                                            <button type="submit" class="btn btn-light btn-sm text-danger border" title="Usuń" onclick="return confirm('Usunąć?');">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <div class="mb-3 text-muted opacity-25">
                            <i class="bi bi-folder-x fs-1"></i>
                        </div>
                        <p class="text-muted">Brak plików w chmurze.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const fileInput = document.getElementById('fileUpload');
        const label = document.querySelector('.upload-area p');

        fileInput.addEventListener('change', function(e) {
            if(this.files.length > 0) label.innerText = `Wybrano: ${this.files.length} plik(ów)`;
            else label.innerText = 'Przeciągnij lub kliknij';
        });

        // Walidacja rozmiaru plików przed wysłaniem (jak wcześniej)
        document.querySelector('form').addEventListener('submit', function(e) {
            const input = document.getElementById('fileUpload');
            const maxSize = 30 * 1024 * 1024; // 30 MB
            for (let file of input.files) {
                if (file.size > maxSize) {
                    alert('Plik jest za duży (limit: 30 MB).');
                    e.preventDefault();
                    return;
                }
            }
        });
    </script>
}